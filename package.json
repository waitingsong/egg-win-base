{
  "name": "egg-win-base",
  "version": "0.0.1",
  "description": "egg boilerplate for win32",
  "private": true,
  "dependencies": {
    "@types/form-data": "*",
    "@types/node": "*",
    "@types/node-fetch": "*",
    "@waiting/shared-core": "^1.9.2",
    "abortcontroller-polyfill": "^1.3.0",
    "egg": "^2.22.2",
    "egg-cors": "^2.2.0",
    "egg-di": "^1.2.0",
    "egg-scripts": "^2.11.0",
    "egg-win": "^0.6.0",
    "form-data": "^2.3.3",
    "moment": "^2.22.2",
    "node-fetch": "^2.6.0",
    "rxjs": "^6.5.2",
    "rxrunscript": "^5.2.0",
    "rxxfetch": "^1.12.1",
    "source-map-support": "^0.5.12"
  },
  "devDependencies": {
    "@types/cheerio": "*",
    "@types/mocha": "*",
    "@types/supertest": "*",
    "autod": "^3.1.0",
    "autod-egg": "^1.1.0",
    "cheerio": "^1.0.0-rc.2",
    "egg-bin": "^4.13.0",
    "egg-ci": "^1.12.0",
    "egg-mock": "^3.23.1",
    "mocha": "^5.2.0",
    "rimraf": "^2.6.3",
    "tslint": "^5.16.0",
    "tslint-eslint-rules": "^5.4.0"
  },
  "egg": {
    "framework": "egg-win"
  },
  "engines": {
    "node": ">=10.8.0"
  },
  "scripts": {
    "autod": "autod",
    "bp:add": "git remote add bp https://github.com/waitingsong/egg-base",
    "bp:sync": "git fetch bp && git pull --no-edit bp master",
    "build": "npm run lint && npm run tsc && npm run jslint",
    "ci": "npm run lint && npm run cov",
    "clean": "rimraf app/**/*.{js,map} test/**/*.{js,map} config/**/*.{js,map}",
    "cov": "egg-bin cov",
    "debug": "egg-bin debug",
    "dev": "egg-bin dev",
    "jslint": "eslint --fix app/**/*.js",
    "link_global": "npm link typescript",
    "lint": "tslint --fix -p tsconfig.json -t stylish",
    "pack": "npm run tsc && npm run tar",
    "release": "standard-version -r",
    "release:first": "standard-version --first-release",
    "repo:init": "sh .githooks/init-repo.sh",
    "start": "egg-scripts start --daemon --title=node-server",
    "stop": "egg-scripts stop --title=node-server",
    "tar": "sh .githooks/tar.sh",
    "test": "npm run tsc && npm run test-local",
    "test-local": "egg-bin test",
    "tsc": "tsc -p tsconfig.json",
    "tsc:w": "tsc -p tsconfig.json -w"
  }
}
